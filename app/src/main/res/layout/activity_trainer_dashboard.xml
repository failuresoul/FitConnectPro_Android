<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.trainer.TrainerDashboardActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2C3E50"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/dashboard_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#F5F7FA">

                    <!-- Welcome Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard Overview"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#34495E"
                        android:layout_marginBottom="16dp"/>

                    <!-- Statistics Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_marginBottom="24dp">

                        <!-- Clients Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="85dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Clients"
                                    android:textColor="#7F8C8D"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvClientsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="4"
                                    android:textColor="#3498DB"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Today's Workouts -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Today's Workouts"
                                    android:textColor="#7F8C8D"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvCompletedWorkouts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="0"
                                    android:textColor="#2ECC71"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Pending Plans -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="83dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pending Plans"
                                    android:textColor="#7F8C8D"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvPendingPlans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="0"
                                    android:textColor="#F39C12"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Quick Actions Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#34495E"
                        android:layout_marginBottom="16dp"/>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="32dp">

                        <Button
                            android:id="@+id/btnCreatePlan"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#3498DB"
                            android:padding="12dp"
                            android:text="Create Workout Plan"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btnCreateMealPlan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Create Meal Plan"
                            android:backgroundTint="#2ECC71"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.AppCompat.Button.Colored"/>

                         <Button
                            android:id="@+id/btnViewClients"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="View My Clients"
                             android:backgroundTint="#9B59B6"
                             android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:padding="12dp"
                            style="@style/Widget.AppCompat.Button.Colored"/>
                    </LinearLayout>

                    <!-- Recent Messages Header -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Messages"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#34495E"
                        android:layout_marginBottom="12dp"/>

                    <!-- Messages Table (Using CardView for container look) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TableLayout
                                android:id="@+id/tableRecentMessages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="1">

                                <!-- Header Row -->
                                <TableRow
                                    android:layout_width="match_parent"
                                    android:background="#ECF0F1"
                                    android:padding="12dp">

                                    <TextView
                                        android:paddingEnd="16dp"
                                        android:text="From"
                                        android:textColor="#2C3E50"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="139dp"
                                        android:layout_height="wrap_content"
                                        android:text="Message"
                                        android:textColor="#2C3E50"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:gravity="end"
                                        android:paddingStart="16dp"
                                        android:text="Date"
                                        android:textColor="#2C3E50"
                                        android:textStyle="bold" />
                                </TableRow>

                                <View
                                    android:layout_height="1dp"
                                    android:background="#BDC3C7"/>

                            </TableLayout>

                            <!-- Data rows will be added dynamically to table -->
                            <TextView
                                android:id="@+id/tvNoMessages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No recent messages"
                                android:padding="12dp"
                                android:gravity="center"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_trainer"
        app:menu="@menu/trainer_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
