<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                app:tint="@color/text_primary"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Workout Plan"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- Plan Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Client"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <Spinner
                    android:id="@+id/spinnerClients"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_edit_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etPlanDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edit_text"
                    android:hint="YYYY-MM-DD"
                    android:paddingStart="12dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Area / Plan Name"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etPlanName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edit_text"
                    android:hint="e.g. Chest &amp; Triceps"
                    android:paddingStart="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Exercise Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Exercises"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Exercise"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <Spinner
                    android:id="@+id/spinnerExercises"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_edit_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sets"
                            android:textSize="12sp"/>
                        <EditText
                            android:id="@+id/etSets"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edit_text"
                            android:hint="3"
                            android:inputType="number"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reps"
                            android:textSize="12sp"/>
                        <EditText
                            android:id="@+id/etReps"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edit_text"
                            android:hint="12"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weight (kg)"
                            android:textSize="12sp"/>
                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edit_text"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:paddingStart="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rest (sec)"
                            android:textSize="12sp"/>
                        <EditText
                            android:id="@+id/etRest"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_edit_text"
                            android:hint="60"
                            android:inputType="number"
                            android:paddingStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:hint="e.g. Drop set on last set"
                    android:padding="8dp"
                     android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnAddExercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Exercise"
                    android:backgroundTint="@color/primary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Added Exercises List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Plan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlanExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:minHeight="100dp"
            android:layout_marginBottom="8dp"/>
            
        <!-- Totals Display -->
        <TextView
            android:id="@+id/tvPlanTotals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Est. Duration: 0 min | Est. Calories: 0 kcal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="end"
            android:textColor="@color/accent"
            android:layout_marginBottom="16dp"/>
            
        <!-- Overall Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overall Instructions"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/etOverallInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:hint="Any general advice for this workout..."
            android:minLines="2"
            android:gravity="top|start"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Footer Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>
                
            <Button
                android:id="@+id/btnSaveTemplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Tmpl."
                android:backgroundTint="@color/text_secondary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnAssignPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Plan"
                android:backgroundTint="@color/primary"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
