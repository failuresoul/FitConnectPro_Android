<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.FitConnectPro.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Messages"
            app:popupTheme="@style/Theme.FitConnectPro.PopupOverlay" 
            xmlns:app="http://schemas.android.com/apk/res-auto"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvConversations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>
        
    <TextView
        android:id="@+id/tvNoConversations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No conversations yet. Connect with friends to start chatting!"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:padding="32dp"
        android:visibility="gone"/>

</LinearLayout>
