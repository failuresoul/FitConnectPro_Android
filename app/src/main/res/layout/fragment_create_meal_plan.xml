<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Meal Plan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="16dp" />

        <!-- Client & Date Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Client"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:id="@+id/spinnerClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="48dp"
                android:background="@android:drawable/btn_dropdown"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Date"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvPlanDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:padding="12dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Meal Type Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:tabMode="fixed"
            app:tabGravity="fill"/>

        <!-- Add Food Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:contentPadding="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAddFoodHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Food to Breakfast"
                    android:textStyle="bold"
                    android:textColor="#E67E22"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/actvFoodSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search Food (e.g., Chicken)"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"/>

                    <ImageButton
                        android:id="@+id/btnViewAllFoods"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="0dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tooltipText="Select Food"
                        android:contentDescription="Select Food"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Qty"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="serving(s)"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"/>

                    <Button
                        android:id="@+id/btnAddFood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:backgroundTint="#2ECC71"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Food List for Selected Meal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Foods"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <ListView
            android:id="@+id/lvAddedFoods"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FAFAFA"
            android:layout_marginBottom="16dp"/>

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation Instructions"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        
        <EditText
            android:id="@+id/etInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter instructions for this meal..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Summary Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F6F3"
            android:padding="12dp"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Summary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView android:id="@+id/tvTotalCalories" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Cals: 0"/>
                <TextView android:id="@+id/tvTotalProtein" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Prot: 0g"/>
                <TextView android:id="@+id/tvTotalCarbs" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Carbs: 0g"/>
                <TextView android:id="@+id/tvTotalFats" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Fats: 0g"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnAssignPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign Meal Plan"
            android:backgroundTint="#3498DB"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>
