<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FitConnectPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- UI Colors -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Component Styles -->
        <item name="materialButtonStyle">@style/Widget.FitConnectPro.Button</item>
        <item name="cardViewStyle">@style/Widget.FitConnectPro.Card</item>
        <item name="textInputStyle">@style/Widget.FitConnectPro.TextInputLayout</item>

        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.FitConnectPro" parent="Base.Theme.FitConnectPro" />

    <!-- Theme without ActionBar for splash screen -->
    <style name="Theme.FitConnectPro.NoActionBar" parent="Theme.FitConnectPro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Theme.FitConnectPro.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.FitConnectPro.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>